events#new page

<h1>New Event</h1>

<%= link_to 'Show all events', locations_path %>

<%= form_for event do |e| %>
  <p>
    <%= e.label :name %>
    <%= e.text_field :name %>
  </p>

  <p>
    <%= e.label :city %>
    <%= e.text_field :city %>
  </p>

  <p>
    <%= e.label :description %>
    <%= e.text_area :description %>
  </p>

  <p>
    <%= e.label :image %>
    <%= e.text_field :image %>
  </p>

  <p>
    <%= e.submit %>
  </p>

<% end %>
